{
  "storage": {
    "enabled": true,
    "bucketName": "barb-cut.firebasestorage.app",
    "uploads": [
      {
        "name": "Haircut Images",
        "enabled": true,
        "sourceDir": "../data-files",
        "destinationPath": "haircut-images/",
        "fileTypes": [".png", ".jpg", ".jpeg"],
        "metadata": {
          "cacheControl": "private, max-age=3600"
        },
        "makePublic": false
      }
    ]
  },
  "firestore": {
    "enabled": true,
    "collections": [
      {
        "name": "haircuts",
        "enabled": true,
        "sourceFile": "../firestore-data/haircuts.json",
        "description": "Haircut styles and designs",
        "idField": "id",
        "imageUrlPrefix": "haircut-images/"
      },
      {
        "name": "beard_styles",
        "enabled": true,
        "sourceFile": "../firestore-data/beard_styles.json",
        "description": "Beard styling options",
        "idField": "id"
      },
      {
        "name": "services",
        "enabled": false,
        "sourceFile": "../firestore-data/services.json",
        "description": "Barber services offered",
        "idField": "id"
      }
    ]
  },
  "options": {
    "overwrite": true,
    "deletePreviousDocs": true,
    "verbose": true
  }
}
