rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isBarber() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'barber';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users Collection
    // Public read for basic info, authenticated users can only modify their own
    match /users/{userId} {
      allow read: if true; // Public read for user profiles
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();

      // User subcollections
      match /bookings/{bookingId} {
        allow read, create: if isOwner(userId) || isBarber() || isAdmin();
        allow update, delete: if isOwner(userId) || isBarber() || isAdmin();
      }

      match /aiGenerations/{generationId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }

      match /preferences/{preferenceId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Styles Collection (Haircuts & Beard Styles)
    // Public read, only admin write
    match /styles/{styleId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Haircuts Collection (individual haircut styles)
    // Public read, only admin write
    match /haircuts/{haircutId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Beard Styles Collection
    // Public read, only admin write
    match /beard_styles/{beardStyleId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Products Collection
    // Public read, only admin write
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Profile Collection (app configuration)
    // Public read, only admin write
    match /profile/{profileDoc} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // History Collection
    // Public read, only admin write
    match /history/{historyDoc} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Bookings Collection (Appointments)
    // Public browse, authenticated create, owner/barber/admin manage
    match /bookings/{bookingId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if 
        isOwner(resource.data.userId) || 
        (isBarber() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.barberId == resource.data.barberId) ||
        isAdmin();
    }

    // Barbers Collection
    // Public read, admin write
    match /barbers/{barberId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();

      match /schedule/{scheduleDoc} {
        allow read: if true;
        allow write: if get(/databases/$(database)/documents/barbers/$(barberId)).data.userId == request.auth.uid || isAdmin();
      }

      match /ratings/{ratingId} {
        allow read: if true;
        allow create: if isAuthenticated();
        allow update, delete: if isOwner(resource.data.userId) || isAdmin();
      }
    }

    // Locations Collection
    // Public read, admin manage
    match /locations/{locationId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();

      match /operatingHours/{dayDoc} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    // Payments Collection
    // Users can read their own, admin all
    match /payments/{paymentId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Analytics Collection (read-only for admin)
    match /analytics/{analyticsDoc} {
      allow read: if isAdmin();
      allow write: if false;
    }

    // System Collection (_migrations)
    match /_migrations/{migrationDoc} {
      allow read: if isAdmin();
      allow write: if false; // Migrations managed by backend only
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
