rules_version = '2';
// BarbCut: Haircut/beard tryout app. No bookings, barbers, or payments.
// Collections: users (with points), favourites, userPhotos, haircuts, beard_styles,
// products (referral links), profile (app config), tabCategories, history, aiJobs, _migrations.
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users: auth + app profile + points (points writable by server only)
    match /users/{userId} {
      match /favourites/{favId} {
        allow read, write: if isOwner(userId);
      }
      allow read: if true;
      allow create: if isAuthenticated() && isOwner(userId) && (request.resource.data.points == null || request.resource.data.points == 0);
      allow update: if (isOwner(userId) || isAdmin()) && request.resource.data.points == resource.data.points;
      allow delete: if isAdmin();
    }

    match /styles/{styleId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /haircuts/{haircutId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /beard_styles/{beardStyleId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Products: referral/affiliate links only; public read
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // App-wide config (e.g. costPerGeneration, freeTierCredits)
    match /profile/{profileDoc} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /tabCategories/{categoryId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Per-user app profile (questionnaire, preferences)
    match /userProfiles/{userId} {
      allow read, create, update: if isOwner(userId);
      allow delete: if isOwner(userId) || isAdmin();
    }

    // AI generation history: user sees own
    match /history/{historyDoc} {
      allow read: if isAuthenticated() && isOwner(resource.data.userId) || isAdmin();
      allow create, update, delete: if isAdmin();
    }

    // AI jobs: user sees own; create/update/delete by server only
    match /aiJobs/{jobId} {
      allow read: if isAuthenticated() && isOwner(resource.data.userId) || isAdmin();
      allow create, update, delete: if isAdmin();
    }

    match /userPhotos/{userId} {
      allow read: if isOwner(userId);
      allow create, update: if isOwner(userId);
      allow delete: if isOwner(userId) || isAdmin();
    }

    match /analytics/{analyticsDoc} {
      allow read: if isAdmin();
      allow write: if false;
    }

    match /_migrations/{migrationDoc} {
      allow read: if isAdmin();
      allow write: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
