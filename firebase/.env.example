# Firebase Environment Variables Example
# Copy this file to .env and fill in your values

# Service account key path (absolute path recommended)
GOOGLE_APPLICATION_CREDENTIALS="/path/to/firebase/serviceAccountKey.json"

# Firebase Project ID
FIREBASE_PROJECT_ID="barb-cut"

# Firebase API Key (from Firebase Console)
FIREBASE_API_KEY="your_api_key_here"

# For emulator (when running locally)
# Set to true to use emulators instead of cloud
FIREBASE_EMULATOR_HOST="localhost"
FIRESTORE_EMULATOR_HOST="localhost:8080"
FIREBASE_AUTH_EMULATOR_HOST="localhost:9099"

# Node environment
NODE_ENV="development"
