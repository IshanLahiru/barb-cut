rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Styles images - public read (or authenticated)
    match /styles/{styleId}/{allPaths=**} {
      allow read: if true; // Allow public read for style images
      allow write: if false; // No public write access (only through admin SDK)
    }
    
    // Haircut images - public read for app display
    match /haircut-images/{allPaths=**} {
      allow read: if true; // Allow public read for haircut display images
      allow write: if false; // No public write access (only through admin SDK)
    }
    
    // Beard style images - public read for app display
    match /beard_styles-images/{allPaths=**} {
      allow read: if true; // Allow public read for beard style display images
      allow write: if false; // No public write access (only through admin SDK)
    }
    
    // User uploads - private to the user
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default - deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
