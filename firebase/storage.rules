rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Styles images - authenticated read only
    match /styles/{styleId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // No public write access (only through admin SDK)
    }
    
    // Haircut images - authenticated read only
    match /haircut-images/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // No public write access (only through admin SDK)
    }
    
    // User uploads - private to the user
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default - deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
